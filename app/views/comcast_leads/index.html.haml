= render 'search'

.widget
  .inner
    - header = header_row [sort_link(@search, :follow_up_by, 'F/U By'), sort_link(@search, 'comcast_customer.person', 'Rep'), sort_link(@search, 'comcast_customer.name', 'Name'), sort_link(@search, :created_at, 'Saved'), 'Phone', 'Converted?', 'Services', 'Has Comments']
    = render partial: 'comcast_leads/table', locals: { leads: @comcast_leads, header: header }
- content_for :footer do
  .left= csv_link csv_comcast_leads_path(controller: :comcast_leads, action: :index), @search.result.count
  = paginate @comcast_leads