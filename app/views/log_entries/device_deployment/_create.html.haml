- trackable = log_entry.trackable
- device = trackable.device
- tracking_number = trackable.tracking_number
- comment = log_entry.comment
.entry_type
  Deployed
  .time_ago
    = time_ago_in_words(log_entry.created_at) + ' ago'
.entry_pertains_to= link_to device.serial, device_path(device)
to
= person_link trackable.person
by
= person_link log_entry.person
- if tracking_number.present?
  = precede 'with tracking #' do
    = tracking_link tracking_number
  - if comment
    and
- if comment
  with comment
  %span.comment
    = surround '"', '"' do
      = comment