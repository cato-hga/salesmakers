- title 'New Comcast Sale for ' + @comcast_customer.name

- if @comcast_sale.errors.any?
  - @comcast_sale.errors.full_messages.each do |msg|
    .alert.alert-box= msg

.widget
  .inner
    = form_for [@comcast_customer, @comcast_sale] do |f|
      - sale_date = @comcast_sale.sale_date
      - date_string = ''
      - date_string = sale_date.strftime('%m/%d/%Y') if sale_date
      = f.label :sale_date
      = f.text_field :sale_date, value: date_string, placeholder: 'MM/DD/YYYY'
      = f.label :order_number
      = f.text_field :order_number
      %fieldset
        %legend Services
        .row.full-width
          .medium-3.columns
            = f.check_box :tv
            = f.label :tv, 'Television'
          .medium-3.columns
            = f.check_box :internet
            = f.label :internet
          .medium-3.columns
            = f.check_box :phone
            = f.label :phone
          .medium-3.columns
            = f.check_box :security
            = f.label :security
      %p
        = f.check_box :customer_acknowledged
        = f.label :customer_acknowledged, 'Customer agrees to receive text message reminder(s).'
      = f.submit 'Save', class: [:button]
