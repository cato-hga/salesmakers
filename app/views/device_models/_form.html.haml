= form_for device_model do |f|
  - if device_model.errors.any?
    - device_model.errors.full_messages.each do |msg|
      .alert.alert-box= msg
  = f.label :device_manufacturer, 'Existing Manufacturer'
  - device_manufacturer = device_model.device_manufacturer ? device_model.device_manufacturer.id : nil
  = f.select('device_manufacturer_id', options_from_collection_for_select(DeviceManufacturer.all, 'id', 'name', device_manufacturer ), {prompt: 'Select Manufacturer'})
  = f.label :name, 'Model Name'
  = f.text_field :name
  = f.submit 'Submit', class: 'button'