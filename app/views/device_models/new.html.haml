- content_for :title, 'New Device Model'
- content_for :action_buttons do
  = link_to icon('plus') + ' New Manufacturer', new_device_manufacturer_path, class: [:button, :rounded, :inline_button], id: 'new_action_button'

.widget
  .inner
    = form_for @device_model, method: :post do |f|
      - if @device_model.errors.any?
        - @device_model.errors.full_messages.each do |msg|
          .alert.alert-box= msg
      = f.label :device_manufacturer, 'Existing Manufacturer'
      = f.select('device_manufacturer_id', options_from_collection_for_select(DeviceManufacturer.all, 'id', 'name'))
      = f.label :name, 'New Model'
      = f.text_field :name
      = f.submit 'Submit', class: 'button'