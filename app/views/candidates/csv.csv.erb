<% headers = ['Active?',
              'First Name',
              'Last Name',
              'Suffix',
              'Email',
              'State',
              'ZIP',
              'Training Session',
              'Entered',
              'Entered By',
              'Latitude',
              'Longitude',
              'Shirt Gender',
              'Shirt Size',
              'Last Updated',
              'Status',
              'Denial Reason',
              'Assessment Completed?',
              'Assessment Score',
              'Project',
              'Area',
              'Store',
              'Store #',
              'Source',
              'EID'
] %><%= CSV.generate_line(headers).html_safe %><% @candidates.each do |c| %><%= CSV.generate_line([
                                  c.active? ? 'Yes' : 'No',
                                  c.first_name,
                                  c.last_name,
                                  c.suffix,
                                  c.email,
                                  c.state,
                                  c.zip,
                                  c.sprint_radio_shack_training_session ?  c.sprint_radio_shack_training_session.name : nil,
                                  c.created_at.strftime('%m/%d/%Y %-l:%M%P'),
                                  NameCase(c.created_by.display_name),
                                  c.latitude,
                                  c.longitude,
                                  c.shirt_gender,
                                  c.shirt_size,
                                  c.updated_at.strftime('%m/%d/%Y %-l:%M%P'),
                                  c.status.humanize,
                                  c.candidate_denial_reason ? c.candidate_denial_reason.name : nil,
                                  c.personality_assessment_completed? ? 'Yes' : 'No',
                                  c.personality_assessment_score,
                                  c.location_area ? c.location_area.area.project.name : nil,
                                  c.location_area ? c.location_area.area.name : nil,
                                  c.location_area ? c.location_area.location.name : nil,
                                  c.location_area ? c.location_area.location.store_number : nil,
                                  c.candidate_source.name,
                                  c.person ? c.person.eid : nil
                          ]).html_safe %><% end %>