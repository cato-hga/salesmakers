.sticky
  %nav.top-bar.contain-to-grid.hide-for-medium-down{ data: { topbar: "" } }
    %ul.title-area
      %li
        %a= link_to image_tag('logo_nav.png'), root_path
    %section.top-bar-section
      .right
        %ul.left
          %li.has-dropdown
            = link_to icon('clipboard-notes') + ' Projects', '#'
            %ul.dropdown
              - for project in visible_projects
                %li.has-dropdown
                  = link_to project.name, client_project_path(project.client, project)
                  %ul.dropdown
                    %li.has-dropdown
                      %a{ href: "#" } Areas &amp; Locations
                      %ul.dropdown
                        - if AreaTypePolicy.new(@current_person, AreaType.new).index?
                          %li
                            = link_to 'Area Types', client_project_area_types_path(project.client, project)
                        %li
                          = link_to 'Areas', client_project_areas_path(project.client, project)
                    -#%li.divider
                    -#%li
                    -#  = link_to 'Edit Project', edit_client_project_path(project.client, project)
          - if ClientPolicy.new(@current_person, Client.new).index?
            %li
              = link_to icon('torso-business') + ' Clients', clients_path
          %li
            = link_to icon('torsos-all') + ' People', people_path

          %li.has-dropdown
            = link_to current_user.email, person_path(current_user)
            %ul.dropdown
              %li
                = link_to icon('x') + ' Sign Out', logout_path
          %li
            = link_to icon('comments'), '#', class: 'right-off-canvas-toggle chat-icon'
