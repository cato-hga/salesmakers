.sticky.fixed
  %nav.top-bar.contain-to-grid.hide-for-medium-down{ data: { topbar: "" } }
    %ul.title-area
      %li
        %a= link_to image_tag('logo_nav.png', id: 'joyride-logo'), root_path
    %section.top-bar-section
      .left
        %ul.left
          - if PersonPolicy.new(current_person, Person.new).index?
            %li.has-dropdown#joyride-people
              = link_to icon('torsos-all') + ' People', '#'
              %ul.dropdown
                %li= link_to 'Search', people_path
                %li= link_to 'Org Chart', org_chart_people_path
                - if PersonPolicy.new(current_person, Person.new).create?
                  %li.divider
                  %li= link_to 'New', new_person_path
          - if CandidatePolicy.new(current_person, Candidate.new).index?
            %li.has-dropdown
              = link_to 'Candidates', candidates_path
              %ul.dropdown
                %li= link_to 'New', new_candidate_path
                %li= link_to 'Search', candidates_path
                %li= link_to 'Interview Schedules', interview_schedules_path(Date.today.to_s)
                - if CandidatePolicy.new(current_person, Candidate.new).support_search?
                  %li= link_to 'Support Search', support_search_candidates_path
                - if CandidatePolicy.new(current_person, Candidate.new).dashboard?
                  %li.divider
                  %li= link_to 'Dashboard', dashboard_candidates_path
          - comcast_lead_policy = ComcastLeadPolicy.new(current_person, ComcastLead.new)
          - comcast_sale_policy = ComcastSalePolicy.new(current_person, ComcastSale.new)
          - if comcast_lead_policy.index? || comcast_sale_policy.index?
            %li.has-dropdown
              %a{ href: '#' } Comcast Retail
              %ul.dropdown
                - if comcast_lead_policy.index?
                  %li= link_to 'Comcast Leads', comcast_leads_path
                - if comcast_sale_policy.index?
                  %li= link_to 'Comcast Sales', comcast_sales_path
          - group_count = GroupMeGroupPolicy::Scope.new(current_person, GroupMeGroup.all).resolve.count
          - if group_count > 0
            %li= link_to 'GroupMe Post', new_post_group_me_groups_path
          -# YES. THIS IS DIRTY. But, only IT people need access anyways
          - if DevicePolicy.new(current_person, Device.new).index?
            %li.has-dropdown
              = link_to 'Admin', '#'
              %ul.dropdown
                %li= link_to('Devices', devices_path)
                %li= link_to('Lines', lines_path)
                %li= link_to('Device Models', device_models_path)
                %li.divider
                - for project in visible_projects
                  - next unless project.areas.count > 0
                  %li.has-dropdown
                    %a{ href: '#' }= project.name #link_to project.name, client_project_path(project.client, project)
                    %ul.dropdown
                      -#%li= link_to 'Sales', sales_client_project_path(project.client, project)
                      %li.has-dropdown
                        %a{ href: "#" } Areas &amp; Locations
                        %ul.dropdown
                          - if AreaTypePolicy.new(current_person, AreaType.new).index?
                            %li
                              = link_to 'Area Types', client_project_area_types_path(project.client, project)
                          %li
                            = link_to 'Areas', client_project_areas_path(project.client, project)
                %li.divider
                - if ChangelogEntryPolicy.new(current_person, ChangelogEntry.new).manage?
                  %li= link_to('Changelog', changelog_entries_path)
                %li= link_to('Log', log_entries_path)
          -#GOD. THIS IS DIRTIER THAN WHATS ABOVE. SORRY
          -if ComcastCustomerPolicy.new(current_person, ComcastCustomer.new).create?
            %li= link_to 'New Customer', new_comcast_customer_path
            %li= link_to 'My Customers', comcast_customers_path
            %li= link_to 'End Of Day', new_comcast_eod_path
      .right
        %ul.left
          %li.has-dropdown#joyride-profile
            = link_to current_person.email, '#'
            %ul.dropdown
              %li
                = link_to icon('x') + ' Sign Out', logout_path
- if @staging
  .staging_warning
    %h3 You are on our feature and deployment testing server. And we're testing something!
    %p Your saved data will be occasionally erased, DocuSign paperwork will not be sent, and emails will not be sent.