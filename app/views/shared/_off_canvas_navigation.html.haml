%nav.tab-bar.show-for-medium-down{ data: { topbar: '' } }
  %section.left-small
    %a.left-off-canvas-toggle.menu-icon
      %span
  %section.middle.tab-bar-section
    %h1.title RBD Connect
  %section.right-small
    %a.right-off-canvas-toggle.menu-icon
      %span
%aside.left-off-canvas-menu
  %ul.off-canvas-list
    %li
      %label Menu
    %li
      = link_to 'Home', root_path
    %li
      = link_to 'Feedback', new_feedback_path, class: 'lightbox_feedback'
    %li
      = link_to icon('key') + ' Training Center', 'https://training.retaildoneright.com/', target: '_blank'
  %ul.off-canvas-list
    - for project in visible_projects
      %li
        %label= project.name
      - if AreaTypePolicy.new(@current_person, AreaType.new).index?
        %li
          = link_to 'Area Types', client_project_area_types_path(project.client, project)
      %li
        = link_to 'Areas', client_project_areas_path(project.client, project)
  %ul.off-canvas-list
    %li
      %label Administration
    %li
      = link_to icon('torsos-all') + ' People', people_path
  %ul.off-canvas-list
    %li
      %label= @current_person.email
    %li
      = link_to icon('torso') + ' My Profile', about_person_path(@current_person)
    %li
      = link_to icon('x') + ' Sign Out', logout_path