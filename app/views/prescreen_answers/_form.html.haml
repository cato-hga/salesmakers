- content_for :action_buttons do
  - if @candidate.active?
    = link_to 'Dismiss Candidate', dismiss_candidate_path(@candidate), data: { confirm: 'This will dismiss the candidate. Are you sure?' }, class: [:button, :inline_button]
.widget
  .inner
    = form_for [@candidate, @prescreen_answer] do |f|
      = hidden_field_tag 'call_initiated', @call_initiated.to_s
      %fieldset
        %legend RadioShack Employment
        %p
          = f.label :worked_for_radioshack, 'Has the candidate worked for RadioShack?'
          = f.select :worked_for_radioshack, options_for_select([['Yes', true], ['No', false]]), include_blank: true
        %p
          = f.label :former_employment_date_start, 'Start of Radioshack Employment'
          = f.text_field :former_employment_date_start, readonly: true
        %p
          = f.label :former_employment_date_end, 'End of Radioshack Employment'
          = f.text_field :former_employment_date_end, readonly: true
        %p
          = f.label :store_number_city_state, 'Store Number, City, and State of RadioShack location worked at'
          = f.text_field :store_number_city_state, readonly: true
      %p
        = f.check_box :worked_for_salesmakers
        = f.label :worked_for_salesmakers, 'Candidate has not worked for SalesMakers'
      %p
        = f.check_box :worked_for_sprint
        = f.label :worked_for_sprint, 'Candidate has not worked for Sprint, or is eligible for rehire'
      %p
        = f.check_box :of_age_to_work
        = f.label :of_age_to_work,'Candidate is over 18'
      %p
        = f.check_box :high_school_diploma
        = f.label :high_school_diploma,'Candidate has achieved a high school diploma or equivalant'
      %p
        = f.check_box :eligible_smart_phone
        = f.label :eligible_smart_phone, 'Candidate has an eligible smart phone and/or computer'
      %p
        = f.check_box :visible_tattoos
        = f.label :visible_tattoos, 'Candidate does not have any visible tattoos'
      %p
        = f.check_box :can_work_weekends
        = f.label :can_work_weekends, 'Candidate can work weekends and is OK with 20-24 hours'
      %p
        = f.check_box :reliable_transportation
        = f.label :reliable_transportation, 'Candidate has access to reliable transportation'
      %p
        = f.check_box :ok_to_screen
        = f.label :ok_to_screen, 'Candidate gave permission for background check and drug screen'
      %p.row.full-width
      .availability
        = fields_for @candidate_availability do |avail|
          %fieldset
            %legend Candidate Availability
            .large-4.columns
              .day
                .large-3.columns
                  %strong Monday
                .large-3.columns
                  = check_box_tag :monday_all, nil, nil, class: :check_all
                  = label_tag :monday_all, 'All Day'
                .large-2.columns
                  = avail.check_box :monday_first
                  = avail.label :monday_first, '10-2'
                .large-2.columns
                  = avail.check_box :monday_second
                  = avail.label :monday_second, '2-6'
                .large-2.columns
                  = avail.check_box :monday_third
                  = avail.label :monday_third, '5-9'
              .day
                .large-3.columns
                  %strong Tuesday
                .large-3.columns
                  = check_box_tag :tuesday_all, nil, nil, class: :check_all
                  = label_tag :tuesday_all, 'All Day'
                .large-2.columns
                  = avail.check_box :tuesday_first
                  = avail.label :tuesday_first, '10-2'
                .large-2.columns
                  = avail.check_box :tuesday_second
                  = avail.label :tuesday_second, '2-6'
                .large-2.columns
                  = avail.check_box :tuesday_third
                  = avail.label :tuesday_third, '5-9'
            .large-4.columns
              .day
                .large-3.columns
                  %strong Wednesday
                .large-3.columns
                  = check_box_tag :wednesday_all, nil, nil, class: :check_all
                  = label_tag :wednesday_all, 'All Day'
                .large-2.columns
                  = avail.check_box :wednesday_first
                  = avail.label :wednesday_first, '10-2'
                .large-2.columns
                  = avail.check_box :wednesday_second
                  = avail.label :wednesday_second, '2-6'
                .large-2.columns
                  = avail.check_box :wednesday_third
                  = avail.label :wednesday_third, '5-9'
              .day
                .large-3.columns
                  %strong Thursday
                .large-3.columns
                  = check_box_tag :thursday_all, nil, nil, class: :check_all
                  = label_tag :thursday_all, 'All Day'
                .large-2.columns
                  = avail.check_box :thursday_first
                  = avail.label :thursday_first, '10-2'
                .large-2.columns
                  = avail.check_box :thursday_second
                  = avail.label :thursday_second, '2-6'
                .large-2.columns
                  = avail.check_box :thursday_third
                  = avail.label :thursday_third, '5-9'
            .large-4.columns
              .day
                .large-3.columns
                  %strong Friday
                .large-3.columns
                  = check_box_tag :friday_all, nil, nil, class: :check_all
                  = label_tag :friday_all, 'All Day'
                .large-2.columns
                  = avail.check_box :friday_first
                  = avail.label :friday_first, '10-2'
                .large-2.columns
                  = avail.check_box :friday_second
                  = avail.label :friday_second, '2-6'
                .large-2.columns
                  = avail.check_box :friday_third
                  = avail.label :friday_third, '5-9'
              .day
                .large-3.columns
                  %strong Saturday
                .large-3.columns
                  = check_box_tag :saturday_all, nil, nil, class: :check_all
                  = label_tag :saturday_all, 'All Day'
                .large-2.columns
                  = avail.check_box :saturday_first
                  = avail.label :saturday_first, '10-2'
                .large-2.columns
                  = avail.check_box :saturday_second
                  = avail.label :saturday_second, '2-6'
                .large-2.columns
                  = avail.check_box :saturday_third
                  = avail.label :saturday_third, '5-9'
              .day
                .large-3.columns
                  %strong Sunday
                .large-3.columns
                  = check_box_tag :sunday_all, nil, nil, class: :check_all
                  = label_tag :sunday_all, 'All Day'
                .large-2.columns
                  = avail.check_box :sunday_first
                  = avail.label :sunday_first, '10-2'
                .large-2.columns
                  = avail.check_box :sunday_second
                  = avail.label :sunday_second, '2-6'
                .large-2.columns
                  = avail.check_box :sunday_third
                  = avail.label :sunday_third, '5-9'
            = avail.label :comment, 'Additional Comments'
            = avail.text_field :comment
        %p
          = label_tag :inbound, 'Is this call inbound or outbound?'
          = select_tag :inbound, options_for_select([['Inbound', true], ['Outbound', false]]), include_blank: true
      = f.submit 'Save Answers', class: :button
