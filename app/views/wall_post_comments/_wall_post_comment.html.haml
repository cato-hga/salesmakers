.wall_post_comment
  .row.full-width
    .large-10.medium-9.small-8.columns
      .content
        = wall_post_comment.comment
      .timestamp
        = friendly_datetime wall_post_comment.created_at
        by
        = link_to  wall_post_comment.person.name, wall_post_comment.person #TODO: Make this display the nickname of a person, if available
        - if wall_post_comment.person == @current_person
          |
          %a.show_wall_post_edit_form Edit
          = render partial: 'wall_post_comments/wall_post_edit_comment', locals: { comment: wall_post_comment }
    .large-2.medium-3.small-4.columns
      = avatar wall_post_comment.person
