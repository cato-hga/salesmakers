.widget
  .inner
    .row.full-width
      .large-3.columns.centered_text
        = link_to image_tag( avatar_url(post.person), class: :avatar), '#'
        %div
          %strong
            - if post.person.profile.nickname.present?
              = link_to post.person.profile.nickname, post.person
            - else
              = link_to post.person.display_name, post.person
        .posted_to
          to
          = wall_link post.wall.wallable
        .small.comment.centered_text
          = time_ago_in_words(post.created_at) + ' ago'
          .xx-small
            - if post.created_at.strftime('%m/%d/%Y') == Time.now.strftime('%m/%d/%Y')
              = post.created_at.strftime('%l:%M%P %Z')
            - elsif post.created_at.year == Time.now.year
              = post.created_at.strftime('%m/%d %l:%M%P %Z')
            - else
              = post.created_at.strftime('%m/%d/%Y %l:%M%P %Z')
        .post_actions
          = likes post
          %br
          - if WallPostPolicy.new(@current_person, post).destroy?
            = link_to 'Delete', wall_post_path(post), method: :delete, data: { confirm: 'Are you sure? This action CANNOT be undone!' }
      .large-9.columns
        .post_content
          = yield