%h3
  Gift Cards
  %span.small.comment Current
- if @person
  .row.full-width
    = stat 2, 'Assigned', 'neutral'
    = stat 1, 'Used and not Entered', 'bad'
    .large-4.columns.centered_text
      .neutral.rounded.full-width.padded
        .large 2
        %strong Assigned
    .large-4.columns.centered_text
      .bad.rounded.full-width.padded
        .large 1
        %strong Used and not Entered
    .large-4.columns.centered_text
- else
  .row.full-width
    = stat 10, 'On Hand', 'neutral'
    = stat 9, 'Employees Scheduled', 'neutral'
    = stat '.9', 'Cards per Employee', 'bad'
  .row.full-width
    = stat 2, 'Employees without Cards', 'bad'
    = stat 0, 'Variance', 'ok'