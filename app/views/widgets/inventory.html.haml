  Inventory
  %span.small.comment Current
- if @person
  .row.full-width
    .large-4.columns.centered_text
      .ok.rounded.full-width.padded
        .large 2
        %strong On-Hand
    .large-4.columns.centered_text
      .bad.rounded.full-width.padded
        .large 1
        %strong Transfer Not Accepted
    .large-4.columns
- else
  .row.full-width
    .large-4.columns.centered_text
      .ok.rounded.full-width.padded
        .large 23
        %strong On-Hand
    .large-4.columns.centered_text
      .ok.rounded.full-width.padded
        .large 52
        %strong On Order
    .large-4.columns.centered_text
      .neutral.rounded.full-width.padded
        .large 10
        %strong In Transit
  .row.full-width
    .large-4.columns.centered_text
      .bad.rounded.full-width.padded
        .large 17
        %strong Not Received
